<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_top_margin"
        android:paddingBottom="@dimen/activity_bottom_margin"
        android:weightSum="5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_pic_image_view"
            android:layout_weight=".8"
            android:layout_width="0dp"
            android:layout_height="@dimen/user_pic_preview_height"
            android:layout_marginRight="@dimen/activity_top_margin"
            android:background="@drawable/ic_account_circle_black_48dp" />

        <LinearLayout
            android:layout_weight="4.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/HeaderText"
                android:id="@+id/name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                style="@style/Text"
                android:id="@+id/commit_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                style="@style/Text"
                android:id="@+id/message_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>